<include file="Public:header" />
<div class="main">
    <div class="box_tit">
        <h2>权限组列表</h2>
    </div>
    <div class="operate">
        <div class="fLeft"><input type="button" onclick="add()" class="submit btn5" value="添加权限组"></div>
        <div class="fLeft"><input type="button" onclick="foreverdel()" class="submit btn5" value="删除选中"></div>
        <div class="fLeft">
            <form method="post" action="{:U('Role/index')}">
                <input type="text" name="name" title="权限组名称" class="iptt6">
            <input type="submit" class="submit btn5" value="查询">
            </form>
        </div>
    </div>
    <div class="list">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tbody>
            <tr class="nbg">
                <th><input type="checkbox" id="check"></th>
                <th>编号</th>
                <th>权限组名称</th>
                <th>描述</th>
                <th>操作</th>
            </tr>
            <volist name="list" id="vo">
            <tr>
                <td><input type="checkbox" name="key" value="{$vo.id}"></td>
                <td>{$vo.id}</td>
                <td>{$vo.name}</td>
                <td>{$vo.remark}</td>
                <td><a href="{:U('Role/role',array('id'=>$vo['id']))}">权限设置</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Role/user',array('id'=>$vo['id']))}">成员管理</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Role/edit',array('id'=>$vo['id']))}">修改</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="{:U('Role/foreverdelete',array('id'=>$vo['id']))}" onclick="foreverdel({$vo['id']}); return false;">删除</a></td>
            </tr>
            </volist>
            </tbody>
        </table>
        <div class="th" style="clear: both;">{$page}</div>
        
    </div>
</div>
<include file="Public:footer" />