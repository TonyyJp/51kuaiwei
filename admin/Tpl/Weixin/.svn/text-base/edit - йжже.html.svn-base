                <dl>
                    <dt> 公众账号：</dt>
                    <dd>
                        <input type="text" class="ipt4" name="pubaccount" value="{$vo.pubaccount}"><span class="red">*</span>
                    </dd>
                </dl>
                <dl>
                    <dt> 微信账号：</dt>
                    <dd>
                        <input type="text" class="ipt4" name="wxaccount" value="{$vo.wxaccount}"><span class="fontcolor">与公众账号关联绑定的微信帐号</span>
                    </dd>
                </dl>
