            <dl>
                <dt> 发布类别：</dt>
                <dd>
                    <select name="publish_type_id" id="publish_type_id" onchange="change_publish_type()">
                        <volist name="publish_type" id="ptvo"  key="k">
                            <option value="{$k}" <eq name="vo.publish_type_id" value="$k">selected="selected"</eq>>
                                {$ptvo}
                            </option>
                        </volist> 
                    </select>
                </dd>
            </dl>
